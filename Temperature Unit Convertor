#include <iostream>

using namespace std;

int main()
{
    double Fahrenheit, Celsius;
    cout << "Please enter the value of temperature in degree Fahrenheit" << endl; // the program asks the user to enter the temperature in degree Fahrenheit
    cin  >> Fahrenheit; // user enter the value for temperature in degree fahrenheit 
    
    Celsius = (Fahrenheit-32)*5 / 9; // the formula that will convert the temperature from fahrenheit to degree Celsius
    
    cout << "The temperature in degree Celsius is : " << Celsius <<"Â°" << endl; // this cout statement prints the value of temperature in degree celsius 

    return 0;
}

